<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/userImage"
            android:layout_marginRight="17dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher"
            />
            
            <LinearLayout
                android:id="@+id/infoPanel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/userName"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textSize="16.5sp"
                    android:textColor="#3d3d3d"
                    android:text="userName"
                    />

                <TextView
                    android:id="@+id/userId"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textSize="16.5sp"
                    android:textColor="#3d3d3d"
                    android:text="userId"
                    />

            </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="12dp"
        android:paddingBottom="15dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/regDate"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="16.5sp"
            android:textColor="#3d3d3d"
            android:text="Дата регистрации: 11/09/2001"
            />

        <TextView
            android:id="@+id/workPlace"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="16.5sp"
            android:textColor="#3d3d3d"
            android:text="Рабочее место: Washington DC"
            />

        <TextView
            android:id="@+id/accessLevel"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="16.5sp"
            android:textColor="#3d3d3d"
            android:text="Права: RED"
            />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/changeDataLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingBottom="15dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/changeDataBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Управление учетной записью"/>
    </LinearLayout>
</LinearLayout>