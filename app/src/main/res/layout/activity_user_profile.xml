<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="12dp"
        android:paddingTop="12dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/userImage"
            android:layout_marginRight="17dp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher"
            />
            
            <LinearLayout
                android:id="@+id/infoPanel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/userName"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textSize="16.5sp"
                    android:textColor="#3d3d3d"
                    android:text="userName"
                    />

                <TextView
                    android:id="@+id/userId"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textSize="16.5sp"
                    android:textColor="#3d3d3d"
                    android:text="userId"
                    />

                <TextView
                    android:id="@+id/regDate"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textSize="16.5sp"
                    android:textColor="#3d3d3d"
                    android:text="Дата регистрации"
                    />

                <TextView
                    android:id="@+id/workPlace"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textSize="16.5sp"
                    android:textColor="#3d3d3d"
                    android:text="Рабочее место"
                    />

                <TextView
                    android:id="@+id/accessLevel"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textSize="16.5sp"
                    android:textColor="#3d3d3d"
                    android:text="Уровень доступа"
                    />

            </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/changeDataBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Управление учетной записью"/>
    </LinearLayout>
</LinearLayout>