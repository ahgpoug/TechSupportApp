<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".SignUpActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <EditText
                android:id="@+id/loginET"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:minWidth="200dp"
                android:hint="Логин"
                android:inputType="text" />

            <EditText
                android:id="@+id/userNameET"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:minWidth="200dp"
                android:hint="Отображаемое имя"
                android:inputType="textCapWords" />

            <EditText
                android:id="@+id/workPlaceET"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:minWidth="200dp"
                android:hint="Рабочее место"
                android:inputType="textCapWords" />

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="16dp">

                <RadioButton
                    android:id="@+id/userRadBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Пользователь"
                    android:checked="true"/>

                <RadioButton
                    android:id="@+id/workerRadBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Работник отдела"/>

                <RadioButton
                    android:id="@+id/adminRadBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Администратор"/>

                <RadioButton
                    android:id="@+id/chiefRadBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Начальник отдела"/>

            </RadioGroup>

            <EditText
                android:id="@+id/passwordET"
                android:paddingTop="16dp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:maxLines="1"
                android:minWidth="200dp"
                android:hint="Пароль"/>

            <EditText
                android:id="@+id/repeatPasswordET"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:maxLines="1"
                android:minWidth="200dp"
                android:hint="Повторите пароль"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/returnButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Вернуться"/>

                <Button
                    android:id="@+id/signUpButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Отправить заявку"/>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
